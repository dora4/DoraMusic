<?xml version="1.0" encoding="utf-8"?>

<!-- 设置界面 -->

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="v"
            type="site.doramusic.app.ui.activity.SettingsActivity" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_smoke"
        android:orientation="vertical">

        <View
            android:id="@+id/statusbar_settings"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/skin_theme_color" />

        <com.lwh.jackknife.widget.TitleBar
            android:id="@+id/titlebar_settings"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/skin_theme_color"
            app:tb_title="设置" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_settings_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/selector_item_common"
                    android:onClick="@{v}"
                    android:clickable="true"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="启动页问候语"
                        android:textColor="@color/gray" />

                    <dora.widget.DoraToggleButton
                        android:id="@+id/tb_settings_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        app:tb_show_indicator="false" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_settings_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/selector_item_common"
                    android:onClick="@{v}"
                    android:clickable="true"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="冷启动自动播放"
                        android:textColor="@color/gray" />

                    <dora.widget.DoraToggleButton
                        android:id="@+id/tb_settings_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        app:tb_show_indicator="false" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_settings_three"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/selector_item_common"
                    android:onClick="@{v}"
                    android:clickable="true"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="摇一摇切歌"
                        android:textColor="@color/gray" />

                    <dora.widget.DoraToggleButton
                        android:id="@+id/tb_settings_three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        app:tb_show_indicator="false" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_settings_four"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/selector_item_common"
                    android:onClick="@{v}"
                    android:clickable="true"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="启用热修复"
                        android:textColor="@color/gray" />

                    <dora.widget.DoraToggleButton
                        android:id="@+id/tb_settings_four"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        app:tb_show_indicator="false" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_settings_five"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/selector_item_common"
                    android:onClick="@{v}"
                    android:clickable="true"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="重低音增强"
                        android:textColor="@color/gray" />

                    <dora.widget.DoraToggleButton
                        android:id="@+id/tb_settings_five"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        app:tb_show_indicator="false" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_settings_check_version"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/selector_item_common"
                    android:onClick="@{v}"
                    android:paddingLeft="7dp"
                    android:paddingTop="14dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="检测版本更新"
                        android:textColor="@color/gray" />

                    <TextView
                        android:id="@+id/tv_settings_version"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/gray" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_settings_user_protocol"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/selector_item_common"
                    android:onClick="@{v}"
                    android:paddingLeft="7dp"
                    android:paddingTop="14dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="用户协议"
                        android:textColor="@color/gray" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_settings_privacy_policy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/selector_item_common"
                    android:onClick="@{v}"
                    android:paddingLeft="7dp"
                    android:paddingTop="14dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="隐私政策"
                        android:textColor="@color/gray" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_settings_logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:onClick="@{v}"
                    android:background="@drawable/selector_item_common"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_settings_logout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="注销登录"
                        android:textColor="@color/skin_theme_color"
                        android:textSize="15sp" />
                </RelativeLayout>
            </LinearLayout>
    </LinearLayout>
</layout>